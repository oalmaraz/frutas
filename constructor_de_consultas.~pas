  Sender: TObject);
begin
  inherited;
  ibGuardar.Click;
end;

procedure TfrmConstructor_de_consultas.CancelarPartida1Click(
  Sender: TObject);
begin
  inherited;
  ibCancelar.Click;
end;

procedure TfrmConstructor_de_consultas.EliminarPartida1Click(
  Sender: TObject);
begin
  inherited;
